---
interface Props {
  label?: string;
  class?: string;
}

const { label = "Print these instructions", class: className = "" } = Astro.props;
---

<button
  type="button"
  class:list={["kbm-print-button", className]}
  onclick="window.print()"
  data-testid="button-print"
>
  <svg 
    xmlns="http://www.w3.org/2000/svg" 
    width="18" 
    height="18" 
    viewBox="0 0 24 24" 
    fill="none" 
    stroke="currentColor" 
    stroke-width="2" 
    stroke-linecap="round" 
    stroke-linejoin="round"
    aria-hidden="true"
  >
    <polyline points="6 9 6 2 18 2 18 9"></polyline>
    <path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"></path>
    <rect x="6" y="14" width="12" height="8"></rect>
  </svg>
  {label}
</button>

<style>
  .kbm-print-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.65rem 1.25rem;
    background: #e5e7eb;
    color: #374151;
    border: 1px solid #d1d5db;
    border-radius: 6px;
    font-family: inherit;
    font-size: 0.95rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
  }

  .kbm-print-button:hover {
    background: #d1d5db;
    transform: translateY(-1px);
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
  }

  .kbm-print-button:active {
    transform: translateY(0);
  }

  .kbm-print-button svg {
    flex-shrink: 0;
  }

  @media (max-width: 1024px) {
    .kbm-print-button {
      font-size: 1.25rem;
      padding: 0.85rem 1.5rem;
    }

    .kbm-print-button svg {
      width: 22px;
      height: 22px;
    }
  }

  @media print {
    .kbm-print-button {
      display: none !important;
    }
  }
</style>

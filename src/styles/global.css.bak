}

.ref-scan-title {
  font-size: 1rem;
  margin: 0 0 0.75rem;
  font-weight: 700;
}

.ref-scan-list {
  list-style: none;
  padding-left: 0;
  margin: 0;
}

.ref-scan-list li {

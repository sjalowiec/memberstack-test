  flex-shrink: 0;
  margin-right: 8px;
  font-size: 1.1em;
  font-weight: 600;
  color: #52682d;
}

.ref-scan-list a { 
  color: #52682d;
  font-weight: 600;
  text-decoration: none; 
}

.ref-scan-list li:hover a { 
  color: #C2614E;
  text-decoration: underline; 
}


---
import videos from "../../../data/videos-public.json";
import Layout from "../../../layouts/Layout.astro";
import PageHead from "../../../components/PageHead.astro";

export function getStaticPaths() {
  return videos.map((v) => ({
    params: {
      content_id: String(v.content_id),
      slug: String(v.slug ?? "").replaceAll("|", "-"),
    },
    props: {},
  }));
}
---

<Layout title="Video link updated" description="This video link has been updated.">
  <div class="page-wrap">
    <PageHead title="Video link updated" breadcrumb="Home / Videos" />

    <article class="placeholder">
      <p>This video link has been updated. <a href="/videos">Back to Videos</a>.</p>
    </article>
  </div>
</Layout>

<style>
  .placeholder {
    margin-top: 1rem;
  }
  .placeholder a {
    text-decoration: underline;
  }
</style>
